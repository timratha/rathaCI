.control-panel
  display none
  z-index: 999;
  width: 100%;
  position: fixed;
  height: auto;
  top: 0px;
  background-color: rgba(0, 0, 0, 0.6);
  ul
    display: inline-block;
    padding: 10px 20px;
    li
      display: inline-block;
      vertical-align: middle;
      .iconBox
        box-sizing border-box
        margin 10px;
        padding: 5px;
        background-color white
        display: inline-block;
        width: 90px;
        height: 90px;
        border-radius: 5px;
        &:hover
          width: 100px;
          height: 100px;
          margin 5px;
          padding: 10px;
        i,.label
          display block
          text-align center
