// Icons path
// -------------------------
$fontPath = "./font";

// Input placeholder text color
// -------------------------
$placeholderText = $grayLight;


// Hr border color
// -------------------------
$hrBorder = $borderColor;


// Wells
// -------------------------
$wellBackground = $backgroundColor;


// Navbar
// -------------------------
$navbarCollapseWidth = 979px;

$navbarHeight = 40px;
$navbarBackgroundHighlight = transparent; // #ffffff;
$navbarBackground = $defaultAccentColor; // darken($navbarBackgroundHighlight, 5%);
$navbarBorder = darken($navbarBackground, 12%);

$navbarText = $bodyBackground; // $gray;
$navbarLinkColor = $navbarText; // $gray;
