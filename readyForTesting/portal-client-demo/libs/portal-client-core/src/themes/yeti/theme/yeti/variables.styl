$navbarInverseText = $bodyBackground; // $grayLight;
$navbarInverseLinkColor = $navbarInverseText; // $grayLight;
$navbarInverseLinkColorHover = $navbarInverseText; // $white;
$navbarInverseLinkColorActive = $navbarInverseLinkColorHover;
$navbarInverseLinkBackgroundHover = darken($navbarInverseBackground, 20%); // transparent;
$navbarInverseLinkBackgroundActive = $navbarInverseLinkBackgroundHover;

$navbarInverseSearchBackground = lighten($navbarInverseBackground, 25%);
$navbarInverseSearchBackgroundFocus = $white;
$navbarInverseSearchBorder = $navbarInverseBackground;
$navbarInverseSearchPlaceholderColor = #ccc;

$navbarInverseBrandColor = $navbarInverseText; // $white;


// Pagination
// -------------------------
$paginationBackground = #fff;
$paginationBorder = $borderColor;
$paginationActiveBackground = $backgroundActive;


// Hero unit
// -------------------------
$heroUnitBackground = $grayLighter;
$heroUnitHeadingColor = inherit;
$heroUnitLeadColor = inherit;


// Form states and alerts
// -------------------------
$alertTextShadow = transparent; // rgba(255,255,255,.5);
$warningText = $bodyBackground; // darken($kistersOrange, 20%); // #c09853;
$warningBackgroundContainer = $warningBackground; // lighten($kistersOrange, 80%); // #fcf8e3;
$warningBorder = darken(spin($warningBackgroundContainer, -10), 3%);

$errorText = $bodyBackground; // darken($kistersRed, 20%); // #b94a48;
$errorBackgroundContainer = $dangerBackground; // lighten($kistersRed, 80%); // #f2dede;
$errorBorder = darken(spin($errorBackgroundContainer, -10), 3%);

$successText = $bodyBackground; // darken($kistersGreen, 20%); // #468847;
$successBackgroundContainer = $successBackground; // lighten($kistersGreen, 80%); // #dff0d8;
$successBorder = darken(spin($successBackgroundContainer, -10), 5%);

$infoText = $bodyBackground; // darken($kistersBlue, 20%); // #3a87ad;
$infoBackgroundContainer = $infoBackground; // lighten($kistersBlue, 80%); // #d9edf7;
