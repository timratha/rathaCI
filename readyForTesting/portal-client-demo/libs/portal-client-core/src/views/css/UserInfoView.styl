$base-color = rgb(45, 118, 147); //TODO define in variables

.userInfoView
  @import 'breadCrumb'
  .userPhoto
    font-size 10em
    float left
    color $base-color
    padding 20px
    text-align right
    border 3px dashed transparent
    .fileUploadButton
      position relative
      cursor pointer
      margin 0
    input.uploadBtn
      position: absolute;
      top 0;
      right 0;
      margin 0;
      padding 0;
      font-size 20px;
      cursor pointer;
      opacity 0;
      width 100%;
      height 100%;
  .userImage
  .placeholderImage
    max-width 300px
    display block
  .filehover
    border 3px dashed #0c0
  .userInfoForm
    margin:10px;
    float left
    vertical-align middle
    .form-table
      display: table;
      border-spacing: 10px;
    .form-field
      display: table-row
      .field-label
        display: table-cell;
        padding: 5px 10px;
      .field-input
        display: table-cell;
        margin:10px;
        .dijitReadOnly
        .dijitDisabled
          border: none;
          background: inherit;
          box-shadow: none;
    .field-loader
        display: none;
    .edit-btn
        display: table-cell;
        line-height: 30px;
    &.field-loading
      .field-loader
        display: table-cell;

    .btn-bar
      text-align: right;
      display: none;
      margin:0 20px;
      .saving_loader
        display none
    &.saving
      .saving_loader
        display inline-block