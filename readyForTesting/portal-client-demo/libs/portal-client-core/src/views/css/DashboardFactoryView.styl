.DashboardFactoryView
  @import 'breadCrumb'
  .DashboardCreationForm
    margin:10px auto;
    width: 500px;
    vertical-align middle
    .form-table
      display: table;
      margin: auto;
      border-spacing: 10px;
    .form-field
      display: table-row
      .field-label
        display: table-cell;
        padding: 5px 10px;
      .field-input
        display: table-cell;
        margin:10px;
        .dijitReadOnly
        .dijitDisabled
          border: none;
          background: inherit;
          box-shadow: none;
    .btn-bar
      text-align: center;
      margin:10px 50px;
    .layout-form
      border  none