.rasterMapAnimationViewer {
  .loaderNode {
    background: no-repeat scroll center center #e9e9e9;
    height: 100%;
    width: 100%;
    top: 0;
    opacity: 0.6;
    border-radius: 4px;
    _display: none;
    position: absolute;
  }
  .dijitButton .dijitButtonNode {
    padding: 3px 7px !important;
  }

  .ol-viewport .olCurrentDatetime {
    background-color: rgba(80, 80, 80, 0.7);
    bottom: 5px;
    color: #ffffff;
    display: block;
    font-weight: bold;
    height: 20px;
    padding: 2px;
    text-align: left;
    width: 54px;
    z-index: 1000001;
    font-size: 1em;
  }

  .ol-viewport .olCurrentDatetime.tf-1 {
    width: 54px;
  }
  .ol-viewport .olCurrentDatetime.tf-2 {
    width: 124px;
  }
  .ol-viewport .olCurrentDatetime.tf-3 {
    width: 105px;
  }
  .ol-viewport .olCurrentDatetime.tf-4 {
    width: 244px;
  }

  .ol-viewport .olRasterToPoint {
    top: 5px;
    right: 5px;
  }

  .ol-viewport  .olInactive {
    opacity: 0.50;
  }
  .ol-viewport  .olActive {
    opacity: 1;
  }


  .nonModal_underlay {
    display: none;
  }
}

.rasterMapAnimationViewer.dijitDialog  .dijitDialogTitle {
  font-size: 0.9em;
}
